<div class="flex-row justify-center">
  <h1 class="text-4xl text-black font-bold tracking-wide">Oops!</h1>
  <h1 class="text-3xl text-gray-300 font-bold tracking-wide">You forgoted password? Don't worry about that.</h1>
  <div class="mt-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="">
        <%= f.label :email, class: 'text-sm font-medium text-black' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'ui-input w-[465px]', placeholder: 'email of your account' %>
      </div>

      <div class="mt-3">
        <%= f.submit "Submit", class: 'btn-primary' %>
      </div>
    <% end %>
  </div>

<%# render "devise/shared/links" %>
</div>
