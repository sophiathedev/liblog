<% content_for :title, "Sign in - Liblog" %>
<div class="flex-row justify-center">
  <h1 class="text-4xl  text-gradient from-sky-400 to-blue-600 font-bold tracking-wide">Sign in!</h1>
  <h1 class="text-3xl text-gray-300 font-bold tracking-wide">Continue writing your dreams.</h1>
  <div class="mt-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label "Username or email:", class: 'text-sm text-black font-medium' %><br />
        <%= f.text_field :login, autofocus: true, class: 'ui-input w-[465px]', placeholder: 'username or email' %>
      </div>

      <div class="mt-2">
        <%= f.label "Password:", class: 'text-sm text-black font-medium' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'ui-input w-[465px]', placeholder: 'password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-2">
          <div class="flex flex-wrap justify-between items-center">
            <div>
              <%= f.check_box :remember_me, class: 'form-checkbox' %>
              <%= f.label :remember_me, class: 'text-sm' %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="mt-3">
        <%= f.submit "Log in", class: 'btn-primary text-sm' %>
      </div>
    <% end %>
  </div>

<%# render "devise/shared/links" %>
</div>