<% content_for :title, "Sign up - Liblog" %>

<div class="flex-row justify-center">
  <h1 class="text-4xl text-gradient from-sky-400 to-blue-600 font-bold tracking-wide">Sign up!</h1>
  <h1 class="text-3xl text-gray-300 font-bold tracking-wide">Become a writer. Keep sharing. More growing.</h1>
  <div class="mt-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :username, class: 'font-medium text-sm' %><br/>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'ui-input w-[465px]', placeholder: 'username' %>
      </div>

      <div class="mt-2">
        <%= f.label :email, class: 'font-medium text-sm' %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'ui-input w-[465px]', placeholder: 'email' %>
      </div>

      <div class="mt-2">
        <%= f.label :password, class: 'font-medium text-sm' %>
        <% if @minimum_password_length %>
          <em class="text-sm font-medium">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'ui-input w-[465px]', placeholder: 'password' %>
      </div>

      <div class="mt-2">
        <%= f.label :password_confirmation, class: 'font-medium text-sm' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'ui-input w-[465px]', placeholder: 're-enter password' %>
      </div>

      <div class="mt-4">
        <%= f.submit "Sign up", class: 'btn-primary text-sm' %>
      </div>
    <% end %>
  </div>

<%# render "devise/shared/links" %>
</div>